<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:layout_centerHorizontal="true" 
    android:background="@android:drawable/bottom_bar">

    <TextView 
        android:text="Pocket Chef Main Page" 
        android:id="@+id/TextView01" 
        android:layout_width="wrap_content" android:layout_height="wrap_content" /> 

    <LinearLayout
        android:id="@+id/TopLLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:paddingBottom="0.0dip"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:paddingTop="75.0dip" >

        <Button
            android:id="@+id/addItem"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:minHeight="150dp"
            android:text="Add Item" />

        <Button
            android:id="@+id/yourRecipies"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:minHeight="150dp"
            android:text="Your Recipies" />

        </LinearLayout> 
            
    <LinearLayout 
        android:orientation="horizontal" 
        android:background="@android:color/black"
        android:paddingLeft="0.0dip" 
        android:paddingTop="0.0dip" 
        android:paddingRight="0.0dip" 
        android:paddingBottom="75.0dip" 
        android:layout_width="fill_parent" android:layout_height="wrap_content" 
        android:layout_below="@+id/TopLLayout">
        
        <Button
            android:id="@+id/recipeSearch"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@+id/addItem"
            android:layout_weight="1.0"
            android:minHeight="150dp"
            android:text="Recipe Search" />

        <Button
            android:id="@+id/itemInventory"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:drawableBottom="@+id/yourRecipies"
            android:minHeight="150dp"
            android:text="Item Inventory" />
 
	</LinearLayout>

</RelativeLayout> 

