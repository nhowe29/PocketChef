<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:layout_centerHorizontal="true" 
    android:background="@android:drawable/bottom_bar"
    tools:context=".MainActivity" >

     <TextView 
        android:text="Pocket Chef Main Page" 
        android:id="@+id/TextView01" 
        android:layout_width="wrap_content" android:layout_height="wrap_content" /> 
    
    <LinearLayout
        android:id="@+id/TopLLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:paddingBottom="0.0dip"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:paddingTop="75.0dip" >
    
    	<Button
        	android:id="@+id/button01"
 			android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:minHeight="150dp"
        	android:text="Display User" />
	
	    <Button
	        android:id="@+id/button03"
	      	android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:minHeight="150dp"
	    	android:text="Your Recipes" />
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/MiddleLLayout"
        android:orientation="horizontal" 
        android:background="@android:color/black"
        android:paddingLeft="0.0dip" 
        android:paddingTop="0.0dip" 
        android:paddingRight="0.0dip" 
        android:paddingBottom="0.0dip" 
        android:layout_width="fill_parent" android:layout_height="wrap_content" 
        android:layout_below="@+id/TopLLayout">

        <Button
            android:id="@+id/scan_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:minHeight="150dp"
            android:text="Scan" />
	
		<Button
		    android:id="@+id/button02"
		    android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:minHeight="150dp"
			android:text="Recipe Search" />
	</LinearLayout>
	
    <LinearLayout 
        android:orientation="horizontal" 
        android:background="@android:color/black"
        android:paddingLeft="0.0dip" 
        android:paddingTop="0.0dip" 
        android:paddingRight="0.0dip" 
        android:paddingBottom="0.0dip" 
        android:layout_width="fill_parent" android:layout_height="wrap_content" 
        android:layout_below="@+id/MiddleLLayout">
	
        <TextView
            android:id="@+id/scan_format"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="1.0"
            android:minHeight="200dp"
            android:textIsSelectable="true" />

		<TextView
		    android:id="@+id/scan_content"
		    android:layout_width="0.0dip"
		    android:layout_height="fill_parent"
		    android:layout_centerHorizontal="true"
		    android:layout_weight="1.0"
		    android:minHeight="200dp"
		    android:textIsSelectable="true" />

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="0.0dip"
		    android:layout_height="fill_parent"
		    android:layout_centerHorizontal="true"
		    android:layout_weight="1.0"
		    android:minHeight="200dp"/>
	</LinearLayout>
</RelativeLayout>